{
  "name": "plex-wrapper",
  "version": "1.0.0",
  "description": "Plex.tv API made easy",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RasmusBuchholdt/plex-wrapper.git"
  },
  "keywords": [
    "plex",
    "plex.tv",
    "api"
  ],
  "author": "Rasmus Buchholdt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RasmusBuchholdt/plex-wrapper/issues"
  },
  "homepage": "https://github.com/RasmusBuchholdt/plex-wrapper#readme",
  "devDependencies": {
    "@types/node": "^12.11.1",
    "prettier": "^1.18.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "promise": "^8.0.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  }
}
